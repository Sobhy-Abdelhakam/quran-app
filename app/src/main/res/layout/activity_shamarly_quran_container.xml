<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/shamarly_container_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sobhy.quran.ui.reading.shamarly.ShamarlyQuranContainer">

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/shamarly_view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layoutDirection="rtl" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/shamarly_toolbar"
        app:title=" "
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#801976D2"
         android:visibility="gone"/>

</RelativeLayout>