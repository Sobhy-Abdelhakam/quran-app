<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layoutDirection="rtl"
    android:background="@color/colorPrimary"
    android:layout_margin="@dimen/_8sdp">

    <TextView
        android:id="@+id/item_audio_suras_number"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:padding="@dimen/_8sdp"
        android:text="1"
        android:textSize="@dimen/_12ssp" />

    <TextView
        android:id="@+id/item_audio_suras_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="سورة الفاتحة"
        android:textColor="@color/white"
        android:textSize="@dimen/_18ssp"
        android:padding="@dimen/_8sdp"
        android:layout_weight="2"/>


    <ImageView
        android:id="@+id/item_audio_suras_download"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/ic_download_24"
        android:padding="@dimen/_4sdp" />

    <ProgressBar
        android:id="@+id/item_audio_suras_progress"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:padding="@dimen/_4sdp"
        android:indeterminateTint="@color/white"
        android:visibility="gone"/>

</LinearLayout>